	}
	.small-Grid--guttersXl {
		margin: -2em 0 2em -2em;
	}
	.small-Grid--guttersXl > .Grid-cell {
		padding: 2em 0 0 2em;
	}
}

@media (--break-md) {
	.med-Grid--gutters {
		margin: -1em 0 1em -1em;
	}
	.med-Grid--gutters > .Grid-cell {
		padding: 1em 0 0 1em;
	}

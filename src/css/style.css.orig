	}
}

::-webkit-scrollbar {
  width: 8px;
  background-color: rgba(0, 0, 0, 0.04);
  -webkit-border-radius: 100px;
}

::-webkit-scrollbar-thumb:vertical {
  background: rgba(0,0,0,0.23);
  -webkit-border-radius: 100px;
}
